<div class="container">
<p id="notice"><%= notice %></p>

<h1>Comidas</h1>
<br>
<%= link_to 'Regresar', "/", class: 'btn btn-light btn-small' %>
<br>
<br>
<%= link_to 'Registrar comida', new_food_path, class: 'btn btn-success btn-small white-words' %>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Categoría</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.food_category.name %></td>
        <td><%= link_to 'Editar', edit_food_path(food) %></td>
        <td><%= link_to 'Eliminar', food, method: :delete, data: { confirm: 'Estás seguro de eliminar esta comida?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>