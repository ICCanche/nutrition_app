    <div id="error_explanation">
      <h4><%= pluralize(@food.errors.count, "error")%></h4>
      <ul>
      <% @food.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>
