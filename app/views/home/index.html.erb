<div class="container">
<br>
<h2>Registro de dietas</h2>
<br>
<table class="table">
<thead>
  <tr>
    <th scope="col">Solicitado por</th>
    <th scope="col">Estado</th>
    <th scope="col">Fecha de solicitud</th>
    <th scope="col">Fecha de expiraci√≥n</th>
    <th scope="col">Acciones</th>
  </tr>
</thead>
<tbody>
<% @diets.each do |diet| %>
    <tr>
    <td><%= diet.customer.user.first_name %> <%= diet.customer.user.last_name %></td>
    <td>
    <%- if diet.status.eql? 'requested' %>
        <button type="button" class="btn btn-warning btn-sm">Solicitado</button>
    <%- end %>
    </td>
    <td><%= diet.created_at %></td>
    <td><%= diet.expiration_date %></td>
    <td>
    <button class="btn btn-primary">
      <i class="fas fa-eye"></i>  
    </button>
    </td>
  </tr>
  <% end %>

</tbody>
</table>
</div>
