<div class="container">
<br>
<h2>Usuarios</h2>
<br>
<table class="table">
<thead>
  <tr>
    <th scope="col">Nombre</th>
    <th scope="col">Correo</th>
    <th scope="col">Estado de dieta</th>
    <th scope="col">Acciones</th>
  </tr>
</thead>
<tbody>
<% @customers.each do |customer| %>
    <tr>
    <td><%= customer.user.first_name %> <%= customer.user.last_name %></td>
    <td><%= customer.user.email %></td>
    <td>
    <%- if customer.dietRequestStatus.eql? "new" %>
      <button type="button" class="btn btn-info btn-sm">Sin solicitar</button>
    <%- elsif customer.dietRequestStatus.eql? 'requested' %>
        <button type="button" class="btn btn-warning btn-sm">Solicitado</button>
    <%- end %>
    </td>
    <td>
    <button class="btn btn-primary">
      <i class="fas fa-eye"></i>  
    </button>
    </td>
  </tr>
  <% end %>

</tbody>
</table>
</div>
